	<!-- Adjust the CustomUI send by Records-Eyepiece. Please note, that other plugins can override your configuration (if they require them)! -->
	<custom_ui>
		<!-- Set to 'true' if you want to send the whole <custom_ui> at player connect, otherwise set 'false' -->
		<enabled>true</enabled>

		<!-- Set to 'true' for messages like "Player xyz connects to the game.", "Player xyz get the 1. place.", otherwise set 'false' -->
		<notice>false</notice>

		<!-- Set to 'true' if you want the default Challenge-Info at top right, otherwise set 'false'. If <challenge_widget> is enabled, then disabled by default! -->
		<challenge_info>true</challenge_info>

		<!-- Set to 'true' if you want to see at top right the orange progress bar, otherwise set 'false' -->
		<net_infos>true</net_infos>

		<!-- Set to 'true' if you want to enabled the chatbox at the bottom, otherwise set 'false' -->
		<chat>true</chat>

		<!-- Set to 'true' if you want to see the Checkpoint-List between Time- and Speed-Box, otherwise set 'false' -->
		<checkpoint_list>true</checkpoint_list>

		<!-- Set to 'true' if you want to see the automatic Round-Score-Panel at the right side, otherwise set 'false'. If <round_score> is enabled, then disabled by default! -->
		<round_scores>true</round_scores>

		<!-- Set to 'true' if you want to see the automatic Scoretable at Score, otherwise set 'false' -->
		<scoretable>true</scoretable>
	</custom_ui>


