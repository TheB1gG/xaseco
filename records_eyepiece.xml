	<!-- Paying coppers to first three ranked Players and display a Widget at Score -->
	<!-- NOTE: This is automatic disabled in Gamemode 'Team', Works only on TMUF Servers! -->
	<winning_payout>
		<enabled>false</enabled>

		<minimum_server_coppers>250</minimum_server_coppers>	<!-- If Server gets lower this limit, then payout is disabled -->

		<players>
			<minimum_amount>8</minimum_amount>		<!-- Min. amount of Players to enable winning payout. If less Players online, payout at Score are disabled (hardlimit min. 3 Players) -->
			<rank_limit>10000</rank_limit>			<!-- Every Player below this limit can not win Coppers, set to '0' to disable -->

			<maximum_coppers>60</maximum_coppers>		<!-- Limit of Coppers a Player can win for each Session, set to '0' to disable -->
			<reset_limit>86400</reset_limit>		<!-- The given Limit at <maximum_coppers> are stored for <reset_limit> seconds, within this time the Player are disabled to win. Set to '0' to disable. -->
		</players>

		<pay_coppers>
			<first>20</first>				<!-- Player at the 1. Place receive this amount of Coppers (default min. 20 cc) -->
			<second>15</second>				<!-- Player at the 2. Place receive this amount of Coppers (default min. 15 cc) -->
			<third>10</third>				<!-- Player at the 3. Place receive this amount of Coppers (default min. 10 cc) -->
		</pay_coppers>

		<!-- Here you can setup which group can not win, set to 'true' to ignore the entire list or 'false' to include -->
		<ignore>
			<operator>false</operator>
			<admin>false</admin>
			<masteradmin>false</masteradmin>
