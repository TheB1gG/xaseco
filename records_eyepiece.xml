			<highlite_self_substyle>BgCardSystem</highlite_self_substyle>
			<highlite_other_style>BgsPlayerCard</highlite_other_style>
			<highlite_other_substyle>BgCardSystem</highlite_other_substyle>

			<!-- Here you can set all possible Formating-Codes of TM, but do not enter colors here! -->
			<formatting_codes></formatting_codes>

			<!-- Textcolor (NO formating Codes!); Format: RGBA (A = Alphachanal, Opacity) -->
			<colors>
				<default>FFFF</default>
				<scores>DDDF</scores>
				<top>FF0F</top>
				<better>FF0F</better>
				<worse>CCCF</worse>
